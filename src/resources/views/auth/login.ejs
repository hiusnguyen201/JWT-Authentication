<link rel="stylesheet" href="/assets/css/auth/login.css" />

<div class="card">
  <div class="card-title text-center mb-0">
    <p
      class="mb-3 text-uppercase fw-bold"
      style="letter-spacing: 0.25em; color: #f3a952"
    >
      Welcome Back
    </p>
    <h1 class="title mb-0">Sign In to Your Account</h1>
  </div>
  <div class="card-body">
    <% if(message){%>
    <div class="alert alert-<%=message.type %> my-3">
      <%= message.text %>
    </div>
    <%}%>

    <form method="post" class="mb-4">
      <!-- Username -->
      <div class="mb-3">
        <i class="fas fa-user"></i>
        <label class="form-label" for="username">Username:</label>
        <input
          class="form-control"
          type="text"
          id="username"
          placeholder="Username..."
        />
      </div>

      <!-- Password -->
      <div class="mb-3 input-block">
        <i class="fas fa-lock"></i>
        <label class="form-label" for="password">Password:</label>
        <input
          class="form-control"
          type="password"
          id="password"
          placeholder="Password..."
        />
        <i
          onclick="togglePassword(this)"
          class="fa-solid fa-eye btn-toggle-password"
        ></i>
      </div>

      <div class="text-end mb-3">
        <a href="#">Forgot password?</a>
      </div>

      <div class="d-grid">
        <button class="btn btn-login py-3">
          Sign In <i class="fas fa-sign-in"></i>
        </button>
      </div>
    </form>

    <p class="text-center">
      Don't have an account?
      <a href="<%= registerRoute %>">Sign up and get started!</a>
    </p>

    <div class="seperate"><span>Login with</span></div>

